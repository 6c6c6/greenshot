<Window x:Class="GreenshotPlugin.Windows.PleaseWaitWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ShowInTaskbar="True"
		Title="{Binding Title}" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
	<StackPanel>
		<Label Content="{Binding Text}" HorizontalAlignment="Center" />
		<ProgressBar Minimum="0" Maximum="100" Margin="20" Height="15" IsIndeterminate="{Binding IsIndeterminate}"
					Value="{Binding ProgressValue}" Foreground="{Binding Color}" />
		<StackPanel Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
			<Button Content="Cancel" Margin="5" HorizontalAlignment="Right" Width="100" Click="Button_Click" />
		</StackPanel>
	</StackPanel>
</Window>