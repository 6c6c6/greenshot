<Window x:Class="Greenshot.Wpf.QuickTest.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Greenshot.Wpf.QuickTest"
		mc:Ignorable="d"
		Title="Capture test" SizeToContent="WidthAndHeight">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
		<Button Content="Capture window" Click="WindowButton_OnClick" Name="WindowButton" Height="20" Width="100"></Button>
		<Button Content="Capture screen" Click="ScreenButton_OnClick" Name="ScreenButton" Height="20" Width="100"></Button>
		<Image Name="CapturedImage" Height="Auto" Width="300"></Image>
	</StackPanel>
	
</Window>
